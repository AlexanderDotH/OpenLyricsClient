<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="clr-namespace:OpenLyricsClient.Frontend.View.Custom.View"
             xmlns:model="clr-namespace:OpenLyricsClient.Frontend.Controls.Model"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             LyricPart="{Binding CurrentLyricPart, Mode=TwoWay}"
             LyricParts="{Binding CurrentLyricParts, Mode=TwoWay}"
             x:Class="OpenLyricsClient.Frontend.View.Custom.View.LyricsScroller">
    
    <Grid>
        <ScrollViewer Name="CTRL_Viewer" ScrollChanged="CTRL_Viewer_OnScrollChanged" >
            <ItemsRepeater Name="CTRL_Repeater" Items="{Binding CurrentLyricParts}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Part}"
                                   TextWrapping="Wrap"
                                   FontWeight="Bold"
                                   FontSize="30"
                                   Margin="0,0,0,10"
                                   Foreground="#646464">
                            <TextBlock.Transitions>
                                <Transitions>
                                    <BrushTransition Property="Foreground"
                                                     Easing="CircularEaseOut"
                                                     Duration="0:0:0.500"></BrushTransition>
                                </Transitions>
                            </TextBlock.Transitions>
                        </TextBlock>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>
    </Grid>
</UserControl>
