<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="OpenLyricsClient.Frontend.View.Custom.Badges.Other.IdeaBadge">
    
    <Border CornerRadius="10" Background="{DynamicResource LightBackgroundBrush}">
        
        <StackPanel Orientation="Horizontal" Spacing="0">
            
            <Border CornerRadius="5" Background="#E7D9EA">
                
                <StackPanel Orientation="Horizontal" Spacing="5" Margin="4">
                    
                    <TextBlock Text="Ideas"
                               FontWeight="Normal"
                               Margin="5,5,0,5"
                               Foreground="{DynamicResource PrimaryBackgroundBrush}"
                               FontSize="14"/>
                    
                    <avalonia:MaterialIcon Kind="Idea" 
                                           Foreground="{DynamicResource PrimaryBackgroundBrush}"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
                                                
        </StackPanel>
    </Border>
</UserControl>