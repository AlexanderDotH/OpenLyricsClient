<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:pages="clr-namespace:OpenLyricsClient.Frontend.Models.Pages"
             xmlns:elements="clr-namespace:OpenLyricsClient.Frontend.Models.Elements"
             xmlns:subPages="clr-namespace:OpenLyricsClient.Frontend.View.Pages.SubPages"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:settings="clr-namespace:OpenLyricsClient.Frontend.View.Pages.Settings"
             xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             xmlns:providers="clr-namespace:OpenLyricsClient.Frontend.View.Pages.Settings.Providers"
             mc:Ignorable="d" d:DesignWidth="1500" d:DesignHeight="900"
             Background="{DynamicResource PrimaryBackgroundBrush}"
             Foreground="{DynamicResource PrimaryFontColorBrush}"
             PointerPressed="InputElement_OnPointerPressed"
             x:Class="OpenLyricsClient.Frontend.View.Pages.SettingsPage">
    
    <Design.DataContext>
        <pages:SettingsPageViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="Auto, *">
        
        <Border HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10, 10, 0, 0"
                CornerRadius="5"
                Background="{DynamicResource SecondaryBackgroundBrush}">
            <TextBlock 
                Margin="8"
                Text="Settings"
                FontWeight="Bold"
                FontSize="18"></TextBlock>
        </Border>
        
        <ScrollViewer VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      Margin="30,80,0,0"
                      Width="270"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            
            <StackPanel Orientation="Vertical" 
                        Spacing="15">
                
                <TextBlock Text="Apperience"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryFontColorBrush}"
                           FontWeight="Normal"
                           Margin="0,0,0,0"/>
                
                <StackPanel Orientation="Vertical"
                            Spacing="10">
                
                    <Button Name="BTN_Romanization" 
                            assists:ButtonAssist.CornerRadius="10"
                            Width="260" 
                            Height="46"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            Click="BTN_Romanization_OnClick">
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center"
                                    Spacing="10" 
                                    Margin="0,0,260,0"
                                    HorizontalAlignment="Left">
                            <avalonia:MaterialIcon 
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Kind="Language"/>
                            
                            <TextBlock Text="Romanization"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Name="BTN_Lyrics" Width="260" 
                            assists:ButtonAssist.CornerRadius="10"
                            Height="45"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            Click="BTN_Lyrics_OnClick">
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="10" 
                                    Margin="0,0,260,0"
                                    HorizontalAlignment="Left">
                            
                            <avalonia:MaterialIcon 
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,0"
                                Kind="ScriptText"/>
                            
                            <TextBlock Text="Lyrics"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                
                <TextBlock Text="Services"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryFontColorBrush}"
                           FontWeight="Normal"
                           Margin="0,0,0,0"/>
                
                 <StackPanel Orientation="Vertical"
                            Spacing="10">
                
                    <Button Name="BTN_Spotify" 
                            assists:ButtonAssist.CornerRadius="10"
                            Width="260" 
                            Height="45"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            Click="BTN_Spotify_OnClick">
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="10" 
                                    Margin="0,0,260,0"
                                    HorizontalAlignment="Left">
                            <avalonia:MaterialIcon 
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,0"
                                Kind="Spotify"/>
                            
                            <TextBlock Text="Spotify"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    
                 </StackPanel>
                
                <TextBlock Text="Account"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryFontColorBrush}"
                           FontWeight="Normal"
                           Margin="0,0,0,0"/>
                
                <StackPanel Orientation="Vertical"
                            Spacing="10">
                
                    <Button Name="BTN_Profile" 
                            assists:ButtonAssist.CornerRadius="10"
                            Width="260" 
                            Height="45"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            Click="BTN_Profile_OnClick">
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="10" 
                                    Margin="0,0,260,0"
                                    HorizontalAlignment="Left">
                            <avalonia:MaterialIcon 
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,0"
                                Kind="User"/>
                            
                            <TextBlock Text="Profile"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                
                <TextBlock Text="Advanced"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryFontColorBrush}"
                           FontWeight="Normal"
                           Margin="0,0,0,0"/>
                
                <StackPanel Orientation="Vertical"
                            Spacing="10">
                
                    <Button Name="BTN_Cache" 
                            assists:ButtonAssist.CornerRadius="10"
                            Width="260" 
                            Height="45"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            Click="BTN_Cache_OnClick">
                        <StackPanel Orientation="Horizontal" 
                                    Spacing="10" 
                                    Margin="0,0,260,0"
                                    HorizontalAlignment="Left">
                            <avalonia:MaterialIcon 
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,0"
                                Kind="ContentSave"/>
                            
                            <TextBlock Text="Cache"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                
                
                
            </StackPanel>
            
        </ScrollViewer>
        
        <Carousel Name="PageSelection"
                  Grid.Column="1"
                  Margin="0,60,0,0"
                  VerticalAlignment="Top"
                  SelectedIndex="0"
                  HorizontalAlignment="Stretch">
            <Carousel.Styles>
                <Style Selector="Carousel#PageSelection:not(.notransitions)">
                    <Setter Property="PageTransition">
                        <PageSlide Duration="0.2" 
                                   Orientation="Vertical"
                                   SlideOutEasing="QuadraticEaseOut" 
                                   SlideInEasing="QuadraticEaseOut" />
                    </Setter>
                </Style>
            </Carousel.Styles>
                    
            <settings:SettingsRomanization/>
            
            <settings:SettingsLyrics/>
            
            <providers:SettingsSpotify/>
            
            <settings:SettingsCache/>
            
            <settings:SettingsUserPage/>

        </Carousel>
        
